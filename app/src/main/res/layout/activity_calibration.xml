<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Activities.LocalizationActivity" >


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_green"
        android:layout_weight="1">

            <TextView
                android:id="@+id/textViewInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="walk from the left side to right side of corridor"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                android:textSize="26dp" />
            <TextView
                android:id="@+id/textViewStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Step:"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                android:textSize="26dp" />




            <Button
                android:id="@+id/buttonStartCalibStep"
                android:layout_width="220dp"
                android:layout_height="44dp"
                android:text="Start walking" />

            <Button
                android:id="@+id/buttonEndCalibStep"
                android:layout_width="220dp"
                android:layout_height="44dp"
                android:text="End Walking" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_green"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewInstruction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Hold the phone and facing the right of corridor"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textViewOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Angle:"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="26dp" />


        <Button
            android:id="@+id/buttonStartCalibAngle"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:text="Start: Angle " />

        <Button
            android:id="@+id/buttonEndCalibAngle"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:text="End: Angle " />



    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_green"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="26dp" />




        <Button
            android:id="@+id/buttonReturn"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:text="Exit" />



    </LinearLayout>



</LinearLayout>